{
  "version": 2,
  "framework": null,
  "outputDirectory": "client/build",
  "buildCommand": "cd client && npm install && npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install && cd client && npm install && cd ../server && npm install",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/rss",
      "dest": "/server/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "server/server.js": {
      "maxDuration": 30,
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}