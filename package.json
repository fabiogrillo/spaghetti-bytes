{
  "name": "spaghetti-bytes",
  "version": "2.0.0",
  "description": "Optimized Spaghetti Bytes Blog with advanced caching and image processing",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && nodemon server.js",
    "client:dev": "cd client && npm start",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start": "node server/server.js",
    "analyze": "cd client && ANALYZE=true npm run build",
    "optimize:images": "node scripts/optimizeImages.js",
    "cache:clear": "node scripts/clearCache.js",
    "cache:warmup": "node scripts/warmupCache.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lighthouse": "lighthouse http://localhost:3000 --output html --view"
  },
  "dependencies": {
    "sharp": "^0.33.2",
    "node-cache": "^5.1.2",
    "redis": "^4.6.13",
    "ioredis": "^5.3.2",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "multer-sharp-resizer": "^2.5.1",
    "image-size": "^1.1.1",
    "blurhash": "^2.0.5",
    "workbox-webpack-plugin": "^7.0.0",
    "compression-webpack-plugin": "^11.1.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "terser-webpack-plugin": "^5.3.10",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "mini-css-extract-plugin": "^2.8.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "lighthouse": "^11.5.0",
    "jest": "^29.7.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24"
  }
}